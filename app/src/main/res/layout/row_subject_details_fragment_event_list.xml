<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_basic_pressed_list_item"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recyclerEvent_timeStart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textAlignment="center"
                android:layout_marginBottom="5dp"
                android:text="15:30"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/recyclerEvent_timeEnd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16:30"
                android:textAlignment="center"/>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="?attr/colorOnSurface"
            android:layout_marginStart="8dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recyclerEvent_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Title"
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/recyclerEvent_description"
                    android:layout_marginStart="8dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:textAlignment="textEnd"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="Titleasdgalkjsfdhlakjfhdlakjsdfhljhgfjhgf"
                    android:textSize="18sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/recyclerEvent_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textStart"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="21 Kas"/>

                <TextView
                    android:id="@+id/recyclerEvent_place"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="textEnd"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:text="207"/>

            </LinearLayout>



        </LinearLayout>



    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/dialogFragmetn_topAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            app:menu="@menu/menu_save_cancel"
            app:subtitle="mekatronik muh 2023"
            app:title="@string/addSubject"/>
    </com.google.android.material.appbar.AppBarLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subject"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:background="?attr/colorOnSurface" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/title">


        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dialogFragment_subjectTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </com.google.android.material.textfield.TextInputLayout>


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/people"
                android:textColor="?attr/colorOnSurface"
                android:textSize="18sp"
                android:textStyle="bold" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_gravity="bottom"
                android:layout_margin="5dp"
                android:background="?attr/colorOnSurface" />


        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?attr/colorOnSurface"
            android:text="@string/youCouldTypeTeacherOrAssistant"
            android:layout_gravity="end"
            android:gravity="end"
            android:textSize="11sp"/>




    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/person_1">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialogFragment_person1"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/person_2">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialogFragment_person2"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="16dp"
            android:hint="@string/person_3">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dialogFragment_person3"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="bottom"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/color"
            android:textColor="?attr/colorOnSurface"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_gravity="bottom"
            android:layout_margin="5dp"
            android:background="?attr/colorOnSurface" />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">





        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">





        </LinearLayout>
    </LinearLayout>




    <RadioGroup
        android:id="@+id/dialogFragment_radioGroup_1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio_red"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:checked="false"
            android:button="@null"
            android:background="@drawable/bg_radiobutton_color_picker_color_custom_1"
            android:textAlignment="center"
            android:text="red"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:button="@null"
            android:background="@drawable/bg_radiobutton_color_picker_color_custom_2"
            android:textAlignment="center"
            android:text="yellow"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/radio_blue"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:button="@null"
            android:background="@drawable/bg_radiobutton_color_picker_color_custom_3"
            android:textAlignment="center"
            android:text="green"
            android:layout_weight="1"/>

        <RadioButton
            android:id="@+id/radio_brown"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:button="@null"
            android:background="@drawable/bg_radiobutton_color_picker_color_custom_4"
            android:textAlignment="center"
            android:text="blue"
            android:layout_weight="1"/>
    </RadioGroup>

    <RadioGroup
        android:id="@+id/dialogFragment_radioGroup_2"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:checked="false"
            android:button="@null"
            android:background="@drawable/bg_radiobutton_color_picker_color_custom_5"
            android:textAlignment="center"
            android:text="purple"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:button="@null"
            android:background="@drawable/bg_radiobutton_color_picker_color_custom_6"
            android:textAlignment="center"
            android:text="pink"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:button="@null"
            android:background="@drawable/bg_radiobutton_color_picker_color_custom_7"
            android:textAlignment="center"
            android:text="blue"
            android:layout_weight="1"/>

        <RadioButton
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:button="@null"
            android:background="@drawable/bg_radiobutton_color_picker_color_custom_8"
            android:textAlignment="center"
            android:text="brown"
            android:layout_weight="1"/>
    </RadioGroup>



</LinearLayout>